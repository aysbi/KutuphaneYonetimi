@model List<Author>
@{
    ViewData["Title"] = "Authors";
}

<h1>Authors</h1>

<a class="btn btn-success" asp-area="" asp-controller="Author" asp-action="Create">Add New Book</a>

<table class="table">
    <thead>
        <tr>
            <td>#ID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Birthday</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>

        @foreach (Author author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth.ToShortDateString()</td>

                <td>
                    <a class="btn btn-info btn-sm" asp-area="" asp-controller="Author" asp-action="Details" asp-route-id="@author.Id">Details</a>
                    <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
