@model KutuphaneYonetimi.Models.Author
@{
    ViewData["Title"] = "Deleting...";
}

<h1>Are You Sure?</h1>

<form asp-controller="Author" asp-action="Delete2" asp-route-id="@Model.Id" method="post">

    <p>&quot;@Model.FirstName @Model.LastName.ToUpper()&quot; will be deleted.</p>

    <button class="btn btn-danger" type="submit">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

